<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical"
    app:menu="@menu/menutwo">

    <Button
        android:id="@+id/btnTextViewForTab"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:background="@drawable/tabbuttonbackground"
        android:elevation="10dp"
        android:gravity="center"
        android:text="1"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="9.4"
            android:background="@drawable/btngooglesearchs"
            android:elevation="7dp"
            android:weightSum="9">

            <ImageView
                android:id="@+id/btnmic"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/hhh"/>

            <EditText
                android:id="@+id/edttexturl"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="7.8"
                android:background="@android:color/transparent"
                android:hint="Enter Url or Search"
                android:imeOptions="actionGo"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:textColor="@color/black"/>


            <ImageButton
                android:id="@+id/btnrefresh"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.6"
                android:background="@drawable/hover_selector_two"
                android:pointerIcon="hand">

            </ImageButton>

            <View
                android:layout_width="1.5dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:background="@color/teal_200"/>


            <ImageView
                android:id="@+id/searchbtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:layout_weight="0.8"
                android:pointerIcon="hand"
                android:src="@drawable/ic_search_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <ImageButton
                android:id="@+id/btnAddtobookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_bookmark_border_24" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>

